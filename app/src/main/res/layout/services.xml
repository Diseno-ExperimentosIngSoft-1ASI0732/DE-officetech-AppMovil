<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF1FD">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logappmovil" />
    </androidx.cardview.widget.CardView>


    <!-- Contenido principal con todo el amor del mundo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <!-- Título con cariño -->

        <!-- Subtítulo hecho con esmero -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Your previous tech requirements:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- Botón especial para nuevos servicios -->
        <Button
            android:id="@+id/newServiceButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E3F2FD"
            android:text="Request a new tech service +"
            android:textAllCaps="false"
            android:textColor="#2196F3" />

        <!-- Encabezados de tabla con mucho detalle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tech Service"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Technician"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Done by"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Primer servicio - hecho con dedicación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Descripción del servicio -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Analytics and Reporting Tools: We need to assess the performance of our business and make informed decisions."
                    android:textColor="#333333" />

                <!-- Detalles del técnico y fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="David Fernandez, Data Analyst"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="30/03/2024"
                        android:textAlignment="textEnd"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Botón para comentarios -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:text="+ Add comment"
                    android:textAllCaps="false"
                    android:textColor="#2196F3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Segundo servicio - con el mismo amor que el primero -->
    </LinearLayout>

    <!-- Barra de navegación inferior - hecha con cariño para ti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/homeNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#2196F3"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:id="@+id/historyNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:id="@+id/profileNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#2196F3"
            android:layout_marginHorizontal="24dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>